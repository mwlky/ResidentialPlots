@model Models.ResidentialPlot

@{
    ViewData["Title"] = "Removing residential plot";
}

<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h2>Remove Residential Plot: @Model.Name</h2>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <input asp-for="ID" type="hidden"/>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Plot Name</label>
                    <input asp-for="Name" class="form-control border-0 shadow-sm" placeholder="Enter plot name"
                           readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Location" class="form-label">Location</label>
                    <input asp-for="Location" class="form-control border-0 shadow-sm" placeholder="Enter location"
                           readonly/>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" id="plotDescription"
                              class="form-control border-0 shadow-sm" readonly></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Size" class="form-label">Size (sq.ft.)</label>
                    <input asp-for="Size" type="number" class="form-control border-0 shadow-sm"
                           placeholder="Enter size in square feet" readonly/>
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price ($)</label>
                    <input asp-for="Price" type="number" class="form-control border-0 shadow-sm"
                           placeholder="Enter price in dollars" readonly/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button asp-controller="ResidentialPlots" asp-action="RemovePOST" asp-route-id="@Model.ID" type="submit"
                            class="btn btn-danger px-4"> Remove
                    </button>
                    <a asp-controller="ResidentialPlots" asp-action="Index" class="btn btn-outline-secondary px-4">
                        Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
</body>
</html>
