@model List<Models.ResidentialPlot>

<!DOCTYPE html>
<html>
<head>
    <title>Management</title>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const deleteModal = document.getElementById('deleteModal');
            const deleteFormId = document.getElementById('deleteFormId'); // Hidden input in the form

            deleteModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget; // Button that triggered the modal
                const plotId = button.getAttribute('data-plot-id'); // Get the plot ID

                if (plotId) {
                    deleteFormId.value = plotId; // Update hidden input with plot ID
                }
            });
        });
    </script>
</head>
<body>
<div>
    <div>
        <a type="button" class="btn btn-primary w-auto mb-3" asp-controller="ResidentialPlots" asp-action="Create">Add Plot</a>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Warning</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this plot?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <form method="post" id="deleteForm" action="/ResidentialPlots/Remove">
                        <input type="hidden" name="id" id="deleteFormId" value="" />
                        <button type="submit" class="btn btn-danger">Yes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Location</th>
            <th scope="col">Description</th>
            <th scope="col">Size</th>
            <th scope="col">Price</th>
            <th scope="col">Manage</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var plot in Model)
        {
            <tr>
                <th scope="row">@plot.ID</th>
                <td>@plot.Name</td>
                <td>@plot.Location</td>
                <td>@plot.Description</td>
                <td>@plot.Size</td>
                <td>@plot.Price</td>
                <td style="width: 200px; text-align: center;">
                    <a asp-controller="ResidentialPlots" asp-action="Edit" asp-route-id="@plot.ID"
                       class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <button type="button" class="btn btn-danger delete-btn" data-bs-toggle="modal"
                            data-bs-target="#deleteModal" data-plot-id="@plot.ID">
                        Delete
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>
